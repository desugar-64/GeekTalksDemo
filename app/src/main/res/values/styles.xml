<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="cpbStyle">@style/GeekTalksSmoothProgressbarStyle</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.GroupDetails" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PostDetails" parent="AppTheme.Main">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="GeekTalksSmoothProgressbarStyle" parent="CircularProgressBar">
        <item name="cpb_colors">@array/progress_bar_colors</item>
        <item name="cpb_stroke_width">4dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/gorse</item>
    </style>

</resources>
